# Application Configuration
APP_NAME="ITDB - IT Asset Management"
APP_ENV=development
APP_DEBUG=true
APP_URL=http://localhost:8080

# Testing Configuration
BYPASS_AUTH=false

# Database Configuration
DB_CONNECTION=sqlite
DB_DATABASE=./storage/database/itdb.db
DB_HOST=
DB_PORT=
DB_USERNAME=
DB_PASSWORD=

# Alternative PostgreSQL Configuration (for future migration)
# DB_CONNECTION=pgsql
# DB_HOST=localhost
# DB_PORT=5432
# DB_DATABASE=itdb
# DB_USERNAME=itdb_user
# DB_PASSWORD=secure_password

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_ALGORITHM=HS256
JWT_EXPIRATION=86400

# Session Configuration
SESSION_LIFETIME=7200
SESSION_NAME=itdb_session

# File Upload Configuration
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=pdf,doc,docx,xls,xlsx,jpg,jpeg,png,gif,txt,csv,zip
UPLOAD_PATH=./storage/uploads

# LDAP Configuration (optional)
LDAP_ENABLED=false
LDAP_HOST=
LDAP_PORT=389
LDAP_BASE_DN=
LDAP_USERNAME=
LDAP_PASSWORD=

# Email Configuration (for notifications)
MAIL_HOST=
MAIL_PORT=587
MAIL_USERNAME=
MAIL_PASSWORD=
MAIL_ENCRYPTION=tls

# Logging Configuration
LOG_LEVEL=debug
LOG_PATH=./storage/logs

# Cache Configuration
CACHE_DRIVER=file
CACHE_PATH=./storage/cache

# Localization
DEFAULT_LANGUAGE=en
TIMEZONE=UTC