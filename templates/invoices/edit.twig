{% extends "base.twig" %}

{% block title %}Edit {{ invoice.title }}{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/invoices">Invoices</a></li>
            <li class="breadcrumb-item"><a href="/invoices/{{ invoice.id }}">{{ invoice.title }}</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <div class="btn-group">
        <a href="/invoices/{{ invoice.id }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Details
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pencil me-2"></i>Edit Invoice: {{ invoice.title }}
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/invoices/{{ invoice.id }}">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Invoice Information</h6>

                            <div class="mb-3">
                                <label for="title" class="form-label">Invoice Title <span class="text-danger">*</span></label>
                                <input type="text" class="form-control" id="title" name="title" value="{{ invoice.title }}" required>
                            </div>

                            <div class="mb-3">
                                <label for="vendorid" class="form-label">Vendor</label>
                                <select class="form-select" id="vendorid" name="vendorid">
                                    <option value="">Select a vendor...</option>
                                    {% for vendor in form_options.vendors %}
                                    <option value="{{ vendor.id }}" {% if invoice.vendorid == vendor.id %}selected{% endif %}>{{ vendor.name }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="invoicedate" class="form-label">Invoice Date</label>
                                <input type="date" class="form-control" id="invoicedate" name="invoicedate"
                                       value="{% if invoice.invoicedate %}{{ invoice.invoicedate|date('Y-m-d') }}{% endif %}">
                            </div>

                            <div class="mb-3">
                                <label for="total" class="form-label">Total Amount</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" class="form-control" id="total" name="total" step="0.01" min="0" value="{{ invoice.total|default('') }}">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Additional Information</h6>

                            <div class="mb-3">
                                <label for="description" class="form-label">Description</label>
                                <textarea class="form-control" id="description" name="description" rows="4">{{ invoice.description }}</textarea>
                            </div>

                            <div class="mb-3">
                                <label for="notes" class="form-label">Notes</label>
                                <textarea class="form-control" id="notes" name="notes" rows="3">{{ invoice.notes }}</textarea>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/invoices/{{ invoice.id }}" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Update Invoice
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-format total amount on blur
    document.getElementById('total').addEventListener('blur', function() {
        if (this.value) {
            this.value = parseFloat(this.value).toFixed(2);
        }
    });
});
</script>
{% endblock %}