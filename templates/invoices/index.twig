{% extends "base.twig" %}

{% block title %}Invoices{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-receipt me-2"></i>Invoices
        <span class="badge bg-secondary ms-2">{{ pagination.total }}</span>
    </h1>

    {% if user and user.usertype >= 1 %}
    <div class="btn-group">
        <a href="/invoices/create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Add Invoice
        </a>
        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
            <i class="bi bi-download me-1"></i>Export
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/invoices/export/csv">CSV Format</a></li>
            <li><a class="dropdown-item" href="/invoices/export/excel">Excel Format</a></li>
            <li><a class="dropdown-item" href="/invoices/export/pdf">PDF Report</a></li>
        </ul>
    </div>
    {% endif %}
</div>

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/invoices" class="row g-3">
            <!-- Search -->
            <div class="col-md-6">
                <label for="search" class="form-label">Search</label>
                <input type="text"
                       class="form-control"
                       id="search"
                       name="search"
                       value="{{ query.search|default('') }}"
                       placeholder="Search invoices, descriptions...">
            </div>

            <!-- Vendor Filter -->
            <div class="col-md-3">
                <label for="vendor" class="form-label">Vendor</label>
                <select class="form-select" id="vendor" name="vendor">
                    <option value="">All Vendors</option>
                    {% for vendor in filters.vendors %}
                    <option value="{{ vendor.id }}"
                            {% if query.vendor|default('') == vendor.id %}selected{% endif %}>
                        {{ vendor.name }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Action Buttons -->
            <div class="col-md-3 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a href="/invoices" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Invoices Table -->
<div class="card">
    <div class="card-body">
        {% if invoices|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Invoice</th>
                        <th>Vendor</th>
                        <th>Date</th>
                        <th>Total</th>
                        <th>Description</th>
                        <th width="120">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for invoice in invoices %}
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <div>
                                    <a href="/invoices/{{ invoice.id }}" class="fw-bold text-decoration-none">
                                        {{ invoice.title }}
                                    </a>
                                    {% if invoice.notes %}
                                        <br><small class="text-muted">{{ invoice.notes }}</small>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if invoice.vendor %}
                                {{ invoice.vendor.name }}
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if invoice.invoicedate %}
                                <span>{{ invoice.invoicedate|date('M j, Y') }}</span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if invoice.total %}
                                <span class="fw-bold">${{ invoice.total_formatted }}</span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if invoice.description %}
                                {{ invoice.description|slice(0, 50) }}{% if invoice.description|length > 50 %}...{% endif %}
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="/invoices/{{ invoice.id }}"
                                   class="btn btn-outline-primary btn-sm"
                                   title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                {% if user and user.usertype >= 2 %}
                                <a href="/invoices/{{ invoice.id }}/edit"
                                   class="btn btn-outline-secondary btn-sm"
                                   title="Edit Invoice">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {% endif %}
                                {% if user and user.isAdmin() %}
                                <button type="button"
                                        class="btn btn-outline-danger btn-sm"
                                        title="Delete Invoice"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal{{ invoice.id }}">
                                    <i class="bi bi-trash"></i>
                                </button>
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Pagination -->
        {% if pagination.last_page > 1 %}
        <nav aria-label="Invoices pagination" class="mt-3">
            <ul class="pagination justify-content-center">
                <!-- Previous Page -->
                {% if pagination.current_page > 1 %}
                <li class="page-item">
                    <a class="page-link" href="/invoices?page={{ pagination.current_page - 1 }}">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>
                {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="bi bi-chevron-left"></i> Previous</span>
                </li>
                {% endif %}

                <!-- Page Numbers -->
                {% for page in 1..pagination.last_page %}
                    {% if page == pagination.current_page %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% elseif page <= 3 or page >= pagination.last_page - 2 or (page >= pagination.current_page - 1 and page <= pagination.current_page + 1) %}
                        <li class="page-item">
                            <a class="page-link" href="/invoices?page={{ page }}">{{ page }}</a>
                        </li>
                    {% elseif page == 4 or page == pagination.last_page - 3 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endfor %}

                <!-- Next Page -->
                {% if pagination.current_page < pagination.last_page %}
                <li class="page-item">
                    <a class="page-link" href="/invoices?page={{ pagination.current_page + 1 }}">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
                {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Next <i class="bi bi-chevron-right"></i></span>
                </li>
                {% endif %}
            </ul>

            <!-- Page Info -->
            <div class="text-center text-muted mt-2">
                Showing {{ pagination.from }} to {{ pagination.to }} of {{ pagination.total }} results
            </div>
        </nav>
        {% endif %}

        {% else %}
        <!-- No Invoices Found -->
        <div class="text-center py-5">
            <i class="bi bi-receipt display-4 text-muted mb-3"></i>
            <h5 class="text-muted">No invoices found</h5>
            <p class="text-muted mb-3">
                {% if query.search %}
                    No invoices match your search criteria.
                {% else %}
                    There are no invoices in the system yet.
                {% endif %}
            </p>
            {% if user and user.usertype >= 1 %}
            <a href="/invoices/create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Add First Invoice
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit form on filter change
    document.getElementById('vendor').addEventListener('change', function() {
        this.form.submit();
    });

    // Search with Enter key
    document.getElementById('search').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            this.form.submit();
        }
    });
});
</script>
{% endblock %}