{% extends "base.twig" %}

{% block title %}Edit {{ item_type.typedesc }} - Item Type{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/">Dashboard</a></li>
            <li class="breadcrumb-item"><a href="/admin/item-types">Item Types</a></li>
            <li class="breadcrumb-item"><a href="/admin/item-types/{{ item_type.id }}">{{ item_type.typedesc }}</a></li>
            <li class="breadcrumb-item active">Edit</li>
        </ol>
    </nav>

    <div class="btn-group">
        <a href="/admin/item-types/{{ item_type.id }}" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Details
        </a>
    </div>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-pencil me-2"></i>Edit Item Type: {{ item_type.typedesc }}
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/admin/item-types/{{ item_type.id }}">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                    <div class="mb-3">
                        <label for="typedesc" class="form-label">Type Description <span class="text-danger">*</span></label>
                        <input type="text" class="form-control" id="typedesc" name="typedesc" value="{{ item_type.typedesc }}" required>
                        <div class="form-text">Enter a descriptive name for this item type (e.g., "Desktop Computer", "Network Switch", "Monitor").</div>
                    </div>

                    <div class="mb-3">
                        <div class="form-check">
                            <input type="checkbox" class="form-check-input" id="hassoftware" name="hassoftware" value="1" {{ item_type.hassoftware ? 'checked' : '' }}>
                            <label class="form-check-label" for="hassoftware">
                                Has Software Support
                            </label>
                            <div class="form-text">Check this if items of this type can have associated software licenses.</div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/admin/item-types/{{ item_type.id }}" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Update Item Type
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}