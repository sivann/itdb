{% extends "base.twig" %}

{% block title %}Locations{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-geo-alt me-2"></i>Locations
        <span class="badge bg-secondary ms-2">{{ pagination.total }}</span>
    </h1>

    {% if user and user.usertype >= 1 %}
    <div class="btn-group">
        <a href="/locations/create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Add Location
        </a>
        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
            <i class="bi bi-download me-1"></i>Export
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/locations/export/csv">CSV Format</a></li>
            <li><a class="dropdown-item" href="/locations/export/excel">Excel Format</a></li>
        </ul>
    </div>
    {% endif %}
</div>

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/locations" class="row g-3">
            <!-- Search -->
            <div class="col-md-6">
                <label for="search" class="form-label">Search</label>
                <input type="text"
                       class="form-control"
                       id="search"
                       name="search"
                       value="{{ query.search|default('') }}"
                       placeholder="Search locations, names, floors...">
            </div>

            <!-- Floor Filter -->
            <div class="col-md-4">
                <label for="floor" class="form-label">Floor</label>
                <select class="form-select" id="floor" name="floor">
                    <option value="">All Floors</option>
                    {% for floor in filters.floors %}
                    <option value="{{ floor }}"
                            {% if query.floor|default('') == floor %}selected{% endif %}>
                        {{ floor }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Action Buttons -->
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a href="/locations" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Locations Table -->
<div class="card">
    <div class="card-body">
        {% if locations|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Location</th>
                        <th>Floor</th>
                        <th>Floor Plan</th>
                        <th>Items</th>
                        <th>Racks</th>
                        <th>Areas</th>
                        <th width="120">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for location in locations %}
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-geo-alt me-3 text-primary fs-4"></i>
                                <div>
                                    <a href="/locations/{{ location.id }}" class="fw-bold text-decoration-none">
                                        {{ location.name }}
                                    </a>
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if location.floor %}
                                <span class="badge bg-info">{{ location.floor }}</span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if location.has_floor_plan %}
                                <span class="badge bg-success">
                                    <i class="bi bi-image me-1"></i>Available
                                </span>
                            {% else %}
                                <span class="text-muted">None</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if location.items_count > 0 %}
                                <span class="badge bg-primary">{{ location.items_count }}</span>
                                <a href="/items?location={{ location.id }}" class="btn btn-sm btn-outline-primary ms-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                            {% else %}
                                <span class="text-muted">0</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if location.racks_count > 0 %}
                                <span class="badge bg-success">{{ location.racks_count }}</span>
                                <a href="/racks?location={{ location.id }}" class="btn btn-sm btn-outline-success ms-1">
                                    <i class="bi bi-eye"></i>
                                </a>
                            {% else %}
                                <span class="text-muted">0</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if location.areas_count > 0 %}
                                <span class="badge bg-warning">{{ location.areas_count }}</span>
                            {% else %}
                                <span class="text-muted">0</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="/locations/{{ location.id }}"
                                   class="btn btn-outline-primary btn-sm"
                                   title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                {% if user and user.usertype >= 1 %}
                                <a href="/locations/{{ location.id }}/edit"
                                   class="btn btn-outline-secondary btn-sm"
                                   title="Edit Location">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {% if user.isAdmin() %}
                                <button type="button"
                                        class="btn btn-outline-danger btn-sm"
                                        title="Delete Location"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal{{ location.id }}">
                                    <i class="bi bi-trash"></i>
                                </button>
                                {% endif %}
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Simple Pagination -->
        {% if pagination.last_page > 1 %}
        <nav aria-label="Locations pagination" class="mt-3">
            <ul class="pagination justify-content-center">
                <!-- Previous Page -->
                {% if pagination.current_page > 1 %}
                <li class="page-item">
                    <a class="page-link" href="/locations?page={{ pagination.current_page - 1 }}">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>
                {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="bi bi-chevron-left"></i> Previous</span>
                </li>
                {% endif %}

                <!-- Page Numbers -->
                {% for page in 1..pagination.last_page %}
                    {% if page == pagination.current_page %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% elseif page <= 3 or page >= pagination.last_page - 2 or (page >= pagination.current_page - 1 and page <= pagination.current_page + 1) %}
                        <li class="page-item">
                            <a class="page-link" href="/locations?page={{ page }}">{{ page }}</a>
                        </li>
                    {% elseif page == 4 or page == pagination.last_page - 3 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endfor %}

                <!-- Next Page -->
                {% if pagination.current_page < pagination.last_page %}
                <li class="page-item">
                    <a class="page-link" href="/locations?page={{ pagination.current_page + 1 }}">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
                {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Next <i class="bi bi-chevron-right"></i></span>
                </li>
                {% endif %}
            </ul>

            <!-- Page Info -->
            <div class="text-center text-muted mt-2">
                Showing {{ pagination.from }} to {{ pagination.to }} of {{ pagination.total }} results
            </div>
        </nav>
        {% endif %}

        {% else %}
        <!-- No Locations Found -->
        <div class="text-center py-5">
            <i class="bi bi-geo-alt display-4 text-muted mb-3"></i>
            <h5 class="text-muted">No locations found</h5>
            <p class="text-muted mb-3">
                {% if query.search %}
                    No locations match your search criteria.
                {% else %}
                    There are no locations in the system yet.
                {% endif %}
            </p>
            {% if user and user.usertype >= 1 %}
            <a href="/locations/create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Add First Location
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>

<!-- Delete Modals -->
{% if user and user.isAdmin() %}
    {% for location in locations %}
    <div class="modal fade" id="deleteModal{{ location.id }}" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this location?</p>
                    <div class="alert alert-warning">
                        <strong>{{ location.name }}</strong>
                        {% if location.floor %}<br>Floor: {{ location.floor }}{% endif %}
                        {% if location.items_count > 0 %}
                        <br><strong>Warning:</strong> This location has {{ location.items_count }} assigned items
                        {% endif %}
                        {% if location.racks_count > 0 %}
                        <br><strong>Warning:</strong> This location has {{ location.racks_count }} racks
                        {% endif %}
                    </div>
                    <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        This action cannot be undone. Items and racks in this location will become unassigned.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="POST" action="/locations/{{ location.id }}/delete" class="d-inline">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Location
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endif %}
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit form on filter change
    document.getElementById('floor').addEventListener('change', function() {
        this.form.submit();
    });

    // Search with Enter key
    document.getElementById('search').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            this.form.submit();
        }
    });
});
</script>
{% endblock %}