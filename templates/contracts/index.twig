{% extends "base.twig" %}

{% block title %}Contracts{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-file-text me-2"></i>Contracts
        <span class="badge bg-secondary ms-2">{{ pagination.total }}</span>
    </h1>

    {% if user and user.usertype >= 1 %}
    <div class="btn-group">
        <a href="/contracts/create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Add Contract
        </a>
        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
            <i class="bi bi-download me-1"></i>Export
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/contracts/export/csv">CSV Format</a></li>
            <li><a class="dropdown-item" href="/contracts/export/excel">Excel Format</a></li>
            <li><a class="dropdown-item" href="/contracts/export/pdf">PDF Report</a></li>
        </ul>
    </div>
    {% endif %}
</div>

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/contracts" class="row g-3">
            <!-- Search -->
            <div class="col-md-4">
                <label for="search" class="form-label">Search</label>
                <input type="text"
                       class="form-control"
                       id="search"
                       name="search"
                       value="{{ query.search|default('') }}"
                       placeholder="Search contracts, titles, numbers...">
            </div>

            <!-- Contract Type Filter -->
            <div class="col-md-2">
                <label for="type" class="form-label">Type</label>
                <select class="form-select" id="type" name="type">
                    <option value="">All Types</option>
                    {% for type in filters.contract_types %}
                    <option value="{{ type.id }}"
                            {% if query.type|default('') == type.id %}selected{% endif %}>
                        {{ type.name }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Status Filter -->
            <div class="col-md-2">
                <label for="status" class="form-label">Status</label>
                <select class="form-select" id="status" name="status">
                    <option value="">All Statuses</option>
                    <option value="active" {% if query.status|default('') == 'active' %}selected{% endif %}>Active</option>
                    <option value="expired" {% if query.status|default('') == 'expired' %}selected{% endif %}>Expired</option>
                    <option value="expiring" {% if query.status|default('') == 'expiring' %}selected{% endif %}>Expiring Soon</option>
                </select>
            </div>

            <!-- Contractor Filter -->
            <div class="col-md-2">
                <label for="contractor" class="form-label">Contractor</label>
                <select class="form-select" id="contractor" name="contractor">
                    <option value="">All Contractors</option>
                    {% for contractor in filters.contractors %}
                    <option value="{{ contractor.id }}"
                            {% if query.contractor|default('') == contractor.id %}selected{% endif %}>
                        {{ contractor.title }}
                    </option>
                    {% endfor %}
                </select>
            </div>

            <!-- Action Buttons -->
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a href="/contracts" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Contracts Table -->
<div class="card">
    <div class="card-body">
        {% if contracts|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>Contract</th>
                        <th>Type</th>
                        <th>Contractor</th>
                        <th>Status</th>
                        <th>Total Cost</th>
                        <th>Start Date</th>
                        <th>End Date</th>
                        <th width="120">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for contract in contracts %}
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-file-text me-3 text-primary fs-4"></i>
                                <div>
                                    <a href="/contracts/{{ contract.id }}" class="fw-bold text-decoration-none">
                                        {{ contract.title }}
                                    </a>
                                    {% if contract.number %}
                                        <br><small class="text-muted">{{ contract.number }}</small>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if contract.type_name %}
                                <span class="badge bg-info">{{ contract.type_name }}</span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if contract.contractor %}
                                <div class="d-flex align-items-center">
                                    <i class="bi bi-building me-2"></i>
                                    {{ contract.contractor.title }}
                                </div>
                            {% else %}
                                <span class="text-muted">Not assigned</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if contract.status.status == 'active' %}
                                <span class="badge bg-success">
                                    <i class="bi bi-check-circle me-1"></i>Active
                                </span>
                            {% elseif contract.status.status == 'expired' %}
                                <span class="badge bg-danger">
                                    <i class="bi bi-x-circle me-1"></i>Expired
                                </span>
                            {% else %}
                                <span class="badge bg-secondary">Unknown</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if contract.totalcost %}
                                <span class="fw-bold">${{ contract.totalcost|number_format(2) }}</span>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if contract.startdate %}
                                <small class="text-muted">
                                    {{ contract.startdate|date('M j, Y') }}
                                </small>
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if contract.currentenddate %}
                                <small class="text-muted">
                                    {{ contract.currentenddate|date('M j, Y') }}
                                </small>
                                {% if contract.status.days <= 30 and contract.status.status == 'active' %}
                                    <br><small class="text-warning">{{ contract.status.days }} days left</small>
                                {% endif %}
                            {% else %}
                                <span class="text-muted">-</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                <a href="/contracts/{{ contract.id }}"
                                   class="btn btn-outline-primary btn-sm"
                                   title="View Details">
                                    <i class="bi bi-eye"></i>
                                </a>
                                {% if user and user.usertype >= 1 %}
                                <a href="/contracts/{{ contract.id }}/edit"
                                   class="btn btn-outline-secondary btn-sm"
                                   title="Edit Contract">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {% if user.isAdmin() %}
                                <button type="button"
                                        class="btn btn-outline-danger btn-sm"
                                        title="Delete Contract"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal{{ contract.id }}">
                                    <i class="bi bi-trash"></i>
                                </button>
                                {% endif %}
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Simple Pagination -->
        {% if pagination.last_page > 1 %}
        <nav aria-label="Contracts pagination" class="mt-3">
            <ul class="pagination justify-content-center">
                <!-- Previous Page -->
                {% if pagination.current_page > 1 %}
                <li class="page-item">
                    <a class="page-link" href="/contracts?page={{ pagination.current_page - 1 }}">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>
                {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="bi bi-chevron-left"></i> Previous</span>
                </li>
                {% endif %}

                <!-- Page Numbers -->
                {% for page in 1..pagination.last_page %}
                    {% if page == pagination.current_page %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% elseif page <= 3 or page >= pagination.last_page - 2 or (page >= pagination.current_page - 1 and page <= pagination.current_page + 1) %}
                        <li class="page-item">
                            <a class="page-link" href="/contracts?page={{ page }}">{{ page }}</a>
                        </li>
                    {% elseif page == 4 or page == pagination.last_page - 3 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endfor %}

                <!-- Next Page -->
                {% if pagination.current_page < pagination.last_page %}
                <li class="page-item">
                    <a class="page-link" href="/contracts?page={{ pagination.current_page + 1 }}">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
                {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Next <i class="bi bi-chevron-right"></i></span>
                </li>
                {% endif %}
            </ul>

            <!-- Page Info -->
            <div class="text-center text-muted mt-2">
                Showing {{ pagination.from }} to {{ pagination.to }} of {{ pagination.total }} results
            </div>
        </nav>
        {% endif %}

        {% else %}
        <!-- No Contracts Found -->
        <div class="text-center py-5">
            <i class="bi bi-file-text display-4 text-muted mb-3"></i>
            <h5 class="text-muted">No contracts found</h5>
            <p class="text-muted mb-3">
                {% if query.search %}
                    No contracts match your search criteria.
                {% else %}
                    There are no contracts in the system yet.
                {% endif %}
            </p>
            {% if user and user.usertype >= 1 %}
            <a href="/contracts/create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Add First Contract
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>

<!-- Delete Modals -->
{% if user and user.isAdmin() %}
    {% for contract in contracts %}
    <div class="modal fade" id="deleteModal{{ contract.id }}" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirm Deletion</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>Are you sure you want to delete this contract?</p>
                    <div class="alert alert-warning">
                        <strong>{{ contract.title }}</strong>
                        {% if contract.number %}<br>Number: {{ contract.number }}{% endif %}
                        {% if contract.totalcost %}<br>Total Cost: ${{ contract.totalcost|number_format(2) }}{% endif %}
                    </div>
                    <p class="text-danger mb-0">
                        <i class="bi bi-exclamation-triangle me-1"></i>
                        This action cannot be undone. All associated data will remain but be unlinked.
                    </p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                    <form method="POST" action="/contracts/{{ contract.id }}/delete" class="d-inline">
                        <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                        <button type="submit" class="btn btn-danger">
                            <i class="bi bi-trash me-1"></i>Delete Contract
                        </button>
                    </form>
                </div>
            </div>
        </div>
    </div>
    {% endfor %}
{% endif %}
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit form on filter change
    document.querySelectorAll('#type, #status, #contractor').forEach(function(select) {
        select.addEventListener('change', function() {
            this.form.submit();
        });
    });

    // Search with Enter key
    document.getElementById('search').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            this.form.submit();
        }
    });
});
</script>
{% endblock %}