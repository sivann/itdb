{% extends "base.twig" %}

{% block title %}Create Invoice{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/invoices">Invoices</a></li>
            <li class="breadcrumb-item active">Create New Invoice</li>
        </ol>
    </nav>

    <a href="/invoices" class="btn btn-outline-secondary">
        <i class="bi bi-arrow-left me-1"></i>Back to Invoices
    </a>
</div>

<div class="row justify-content-center">
    <div class="col-lg-8">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-plus-lg me-2"></i>Create New Invoice
                </h5>
            </div>
            <div class="card-body">
                <form method="POST" action="/invoices">
                    <input type="hidden" name="csrf_token" value="{{ csrf_token }}">

                    <div class="row">
                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Invoice Information</h6>

                            <div class="mb-3">
                                <label for="vendorid" class="form-label">Vendor</label>
                                <select class="form-select" id="vendorid" name="vendorid">
                                    <option value="">Select a vendor...</option>
                                    {% for vendor in form_options.vendors %}
                                    <option value="{{ vendor.id }}">{{ vendor.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="buyerid" class="form-label">Buyer</label>
                                <select class="form-select" id="buyerid" name="buyerid">
                                    <option value="">Select a buyer...</option>
                                    {% for buyer in form_options.buyers %}
                                    <option value="{{ buyer.id }}">{{ buyer.title }}</option>
                                    {% endfor %}
                                </select>
                            </div>

                            <div class="mb-3">
                                <label for="invoicedate" class="form-label">Invoice Date</label>
                                <input type="date" class="form-control" id="invoicedate" name="invoicedate" value="{{ 'now'|date('Y-m-d') }}">
                            </div>

                            <div class="mb-3">
                                <label for="total" class="form-label">Total Amount</label>
                                <div class="input-group">
                                    <span class="input-group-text">$</span>
                                    <input type="number" class="form-control" id="total" name="totalcost" step="0.01" min="0">
                                </div>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <h6 class="text-muted mb-3">Additional Information</h6>

                            <div class="mb-3">
                                <label for="description" class="form-label">Comments</label>
                                <textarea class="form-control" id="description" name="comments" rows="4"></textarea>
                            </div>
                        </div>
                    </div>

                    <div class="d-flex justify-content-between">
                        <a href="/invoices" class="btn btn-secondary">
                            <i class="bi bi-x-lg me-1"></i>Cancel
                        </a>
                        <button type="submit" class="btn btn-primary">
                            <i class="bi bi-check-lg me-1"></i>Create Invoice
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-calculate total if needed (can be extended)
    document.getElementById('total').addEventListener('blur', function() {
        if (this.value) {
            this.value = parseFloat(this.value).toFixed(2);
        }
    });
});
</script>
{% endblock %}