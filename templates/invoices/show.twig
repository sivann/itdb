{% extends "base.twig" %}

{% block title %}{{ invoice.title }}{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb mb-0">
            <li class="breadcrumb-item"><a href="/invoices">Invoices</a></li>
            <li class="breadcrumb-item active">{{ invoice.title }}</li>
        </ol>
    </nav>

    <div class="btn-group">
        {% if user and user.usertype >= 2 %}
        <a href="/invoices/{{ invoice.id }}/edit" class="btn btn-primary">
            <i class="bi bi-pencil me-1"></i>Edit Invoice
        </a>
        {% endif %}
        <a href="/invoices" class="btn btn-outline-secondary">
            <i class="bi bi-arrow-left me-1"></i>Back to Invoices
        </a>
    </div>
</div>

<div class="row">
    <!-- Main Information -->
    <div class="col-lg-8 mb-4">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">
                    <i class="bi bi-receipt me-2"></i>{{ invoice.title }}
                </h5>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">Invoice Information</h6>

                        <div class="mb-3">
                            <label class="form-label fw-bold">Invoice Title</label>
                            <div>{{ invoice.title }}</div>
                        </div>

                        {% if invoice.vendor %}
                        <div class="mb-3">
                            <label class="form-label fw-bold">Vendor</label>
                            <div>{{ invoice.vendor.name }}</div>
                        </div>
                        {% endif %}

                        {% if invoice.invoicedate %}
                        <div class="mb-3">
                            <label class="form-label fw-bold">Invoice Date</label>
                            <div>{{ invoice.invoicedate|date('F j, Y') }}</div>
                        </div>
                        {% endif %}

                        {% if invoice.total %}
                        <div class="mb-3">
                            <label class="form-label fw-bold">Total Amount</label>
                            <div>
                                <span class="fs-4 fw-bold text-success">${{ invoice.total_formatted }}</span>
                            </div>
                        </div>
                        {% endif %}
                    </div>

                    <div class="col-md-6">
                        <h6 class="text-muted mb-3">Additional Information</h6>

                        {% if invoice.notes %}
                        <div class="mb-3">
                            <label class="form-label fw-bold">Notes</label>
                            <div class="bg-light p-3 rounded">{{ invoice.notes }}</div>
                        </div>
                        {% endif %}

                        {% if not invoice.notes %}
                        <div class="text-muted text-center py-4">
                            <i class="bi bi-sticky display-6 mb-2"></i>
                            <div>No additional notes available</div>
                        </div>
                        {% endif %}
                    </div>
                </div>

                {% if invoice.description %}
                <hr>
                <div class="mb-0">
                    <label class="form-label fw-bold">Description</label>
                    <div class="bg-light p-3 rounded">{{ invoice.description }}</div>
                </div>
                {% endif %}
            </div>
        </div>

        <!-- Related Items -->
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-link me-2"></i>Related Items
                </h6>
            </div>
            <div class="card-body">
                <div class="text-muted text-center py-4">
                    <i class="bi bi-box display-6 mb-2"></i>
                    <div>No related items found</div>
                    <small>Items purchased with this invoice will appear here</small>
                </div>
            </div>
        </div>
    </div>

    <!-- Sidebar Information -->
    <div class="col-lg-4">
        <!-- Invoice Summary -->
        <div class="card mb-4">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-calculator me-2"></i>Invoice Summary
                </h6>
            </div>
            <div class="card-body">
                <div class="d-flex justify-content-between mb-2">
                    <span>Invoice ID:</span>
                    <span class="fw-bold">#{{ invoice.id }}</span>
                </div>

                {% if invoice.invoicedate %}
                <div class="d-flex justify-content-between mb-2">
                    <span>Date:</span>
                    <span>{{ invoice.invoicedate|date('M j, Y') }}</span>
                </div>
                {% endif %}

                {% if invoice.vendor %}
                <div class="d-flex justify-content-between mb-2">
                    <span>Vendor:</span>
                    <span>{{ invoice.vendor.name }}</span>
                </div>
                {% endif %}

                <hr>

                <div class="d-flex justify-content-between">
                    <span class="fw-bold">Total:</span>
                    <span class="fw-bold text-success fs-5">
                        {% if invoice.total %}
                            ${{ invoice.total_formatted }}
                        {% else %}
                            $0.00
                        {% endif %}
                    </span>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        {% if user and (user.usertype >= 2 or user.isAdmin()) %}
        <div class="card">
            <div class="card-header">
                <h6 class="card-title mb-0">
                    <i class="bi bi-gear me-2"></i>Quick Actions
                </h6>
            </div>
            <div class="card-body">
                <div class="d-grid gap-2">
                    {% if user.usertype >= 2 %}
                    <a href="/invoices/{{ invoice.id }}/edit" class="btn btn-outline-primary btn-sm">
                        <i class="bi bi-pencil me-1"></i>Edit Invoice
                    </a>
                    {% endif %}
                    {% if user.isAdmin() %}
                    <button type="button"
                            class="btn btn-outline-danger btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#deleteModal">
                        <i class="bi bi-trash me-1"></i>Delete Invoice
                    </button>
                    {% endif %}
                </div>
            </div>
        </div>

        <!-- Delete Modal -->
        {% if user.isAdmin() %}
        <div class="modal fade" id="deleteModal" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this invoice?</p>
                        <div class="alert alert-warning">
                            <strong>{{ invoice.title }}</strong>
                            {% if invoice.vendor %}<br>Vendor: {{ invoice.vendor.name }}{% endif %}
                            {% if invoice.total %}<br>Total: ${{ invoice.total_formatted }}{% endif %}
                        </div>
                        <p class="text-danger mb-0">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            This action cannot be undone.
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <form method="POST" action="/invoices/{{ invoice.id }}/delete" class="d-inline">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Delete Invoice
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
        {% endif %}
    </div>
</div>
{% endblock %}