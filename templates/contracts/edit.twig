{% block scripts %}
{% if mode == 'edit' or mode == 'create' %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-focus on title field
    document.getElementById('title').focus();

    // Date validation
    const startDateField = document.getElementById('startdate');
    const endDateField = document.getElementById('currentenddate');

    function validateDates() {
        if (startDateField.value && endDateField.value) {
            const startDate = new Date(startDateField.value);
            const endDate = new Date(endDateField.value);

            if (endDate <= startDate) {
                endDateField.setCustomValidity('End date must be after start date');
            } else {
                endDateField.setCustomValidity('');
            }
        } else {
            endDateField.setCustomValidity('');
        }
    }

    startDateField.addEventListener('change', validateDates);
    endDateField.addEventListener('change', validateDates);

    // Cost formatting
    const costField = document.getElementById('totalcost');
    costField.addEventListener('blur', function() {
        if (this.value) {
            const value = parseFloat(this.value);
            if (!isNaN(value)) {
                this.value = value.toFixed(2);
            }
        }
    });

    // Parent contract warning
    const parentField = document.getElementById('parentid');
    {% if mode == 'edit' %}
    const currentParent = '{{ contract.parentid|default("") }}';
    {% else %}
    const currentParent = '';
    {% endif %}

    parentField.addEventListener('change', function() {
        const warningDiv = document.getElementById('parentWarning');
        if (warningDiv) {
            warningDiv.remove();
        }

        if (this.value && this.value != currentParent) {
            const warning = document.createElement('div');
            warning.id = 'parentWarning';
            warning.className = 'alert alert-warning mt-2';
            warning.innerHTML = '<i class="bi bi-exclamation-triangle me-1"></i><strong>Parent Change:</strong> Changing the parent contract may affect the contract hierarchy.';
            this.parentNode.appendChild(warning);
        } else if (this.value) {
            const warning = document.createElement('div');
            warning.id = 'parentWarning';
            warning.className = 'alert alert-info mt-2';
            warning.innerHTML = '<i class="bi bi-info-circle me-1"></i><strong>Child Contract:</strong> This contract is a sub-contract of the selected parent.';
            this.parentNode.appendChild(warning);
        }
    });

    // Trigger parent validation on load
    if (parentField.value) {
        parentField.dispatchEvent(new Event('change'));
    }
});
</script>
{% endif %}
