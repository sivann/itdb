{% extends "base.twig" %}

{% block title %}Users{% endblock %}

{% block content %}
<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3 mb-0">
        <i class="bi bi-people me-2"></i>Users
        <span class="badge bg-secondary ms-2">{{ pagination.total }}</span>
    </h1>

    {% if user and user.isAdmin() %}
    <div class="btn-group">
        <a href="/users/create" class="btn btn-primary">
            <i class="bi bi-plus-lg me-1"></i>Add User
        </a>
        <button type="button" class="btn btn-outline-primary dropdown-toggle" data-bs-toggle="dropdown">
            <i class="bi bi-download me-1"></i>Export
        </button>
        <ul class="dropdown-menu">
            <li><a class="dropdown-item" href="/users/export/csv">CSV Format</a></li>
            <li><a class="dropdown-item" href="/users/export/excel">Excel Format</a></li>
        </ul>
    </div>
    {% endif %}
</div>

<!-- Search and Filters -->
<div class="card mb-4">
    <div class="card-body">
        <form method="GET" action="/users" class="row g-3">
            <!-- Search -->
            <div class="col-md-6">
                <label for="search" class="form-label">Search</label>
                <input type="text"
                       class="form-control"
                       id="search"
                       name="search"
                       value="{{ query.search|default('') }}"
                       placeholder="Search users, names, descriptions...">
            </div>

            <!-- User Type Filter -->
            <div class="col-md-4">
                <label for="usertype" class="form-label">User Type</label>
                <select class="form-select" id="usertype" name="usertype">
                    <option value="">All Types</option>
                    <option value="1" {% if query.usertype|default('') == '1' %}selected{% endif %}>Admin</option>
                    <option value="2" {% if query.usertype|default('') == '2' %}selected{% endif %}>LDAP User</option>
                </select>
            </div>

            <!-- Action Buttons -->
            <div class="col-md-2 d-flex align-items-end">
                <button type="submit" class="btn btn-primary me-2">
                    <i class="bi bi-search"></i> Filter
                </button>
                <a href="/users" class="btn btn-outline-secondary">
                    <i class="bi bi-arrow-clockwise"></i>
                </a>
            </div>
        </form>
    </div>
</div>

<!-- Users Table -->
<div class="card">
    <div class="card-body">
        {% if users|length > 0 %}
        <div class="table-responsive">
            <table class="table table-hover">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Type</th>
                        <th>Status</th>
                        <th>Items Assigned</th>
                        <th>Last Login</th>
                        <th width="120">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    {% for user_item in users %}
                    <tr>
                        <td>
                            <div class="d-flex align-items-center">
                                <i class="bi bi-person-circle me-3 text-primary fs-4"></i>
                                <div>
                                    <a href="/users/{{ user_item.id }}/edit" class="fw-bold text-decoration-none">
                                        {{ user_item.display_name }}
                                    </a>
                                    {% if user_item.username != user_item.display_name %}
                                        <small class="text-muted">({{ user_item.username }})</small>
                                    {% endif %}
                                </div>
                            </div>
                        </td>
                        <td>
                            {% if user_item.usertype == 0 %}
                                <span class="badge bg-success">Full Access</span>
                            {% elseif user_item.usertype == 1 %}
                                <span class="badge bg-warning">Readonly</span>
                            {% else %}
                                <span class="badge bg-secondary">Legacy ({{ user_item.usertype }})</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user_item.usertype == 0 or user_item.usertype == 1 %}
                                <span class="badge bg-success">Active</span>
                            {% else %}
                                <span class="badge bg-danger">Inactive</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user_item.items_count is defined %}
                                <span class="badge bg-info">{{ user_item.items_count }}</span>
                            {% else %}
                                <span class="text-muted">0</span>
                            {% endif %}
                        </td>
                        <td>
                            {% if user_item.last_login %}
                                <small class="text-muted">
                                    {{ user_item.last_login|date('M j, Y') }}
                                </small>
                            {% else %}
                                <span class="text-muted">Never</span>
                            {% endif %}
                        </td>
                        <td>
                            <div class="btn-group btn-group-sm">
                                {% if user and user.isAdmin() %}
                                <a href="/users/{{ user_item.id }}/edit"
                                   class="btn btn-outline-secondary btn-sm"
                                   title="Edit User">
                                    <i class="bi bi-pencil"></i>
                                </a>
                                {% if user_item.id != user.id %}
                                <button type="button"
                                        class="btn btn-outline-danger btn-sm"
                                        title="Delete User"
                                        data-bs-toggle="modal"
                                        data-bs-target="#deleteModal{{ user_item.id }}">
                                    <i class="bi bi-trash"></i>
                                </button>
                                {% endif %}
                                {% endif %}
                            </div>
                        </td>
                    </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <!-- Simple Pagination -->
        {% if pagination.last_page > 1 %}
        <nav aria-label="Users pagination" class="mt-3">
            <ul class="pagination justify-content-center">
                <!-- Previous Page -->
                {% if pagination.current_page > 1 %}
                <li class="page-item">
                    <a class="page-link" href="/users?page={{ pagination.current_page - 1 }}">
                        <i class="bi bi-chevron-left"></i> Previous
                    </a>
                </li>
                {% else %}
                <li class="page-item disabled">
                    <span class="page-link"><i class="bi bi-chevron-left"></i> Previous</span>
                </li>
                {% endif %}

                <!-- Page Numbers -->
                {% for page in 1..pagination.last_page %}
                    {% if page == pagination.current_page %}
                        <li class="page-item active">
                            <span class="page-link">{{ page }}</span>
                        </li>
                    {% elseif page <= 3 or page >= pagination.last_page - 2 or (page >= pagination.current_page - 1 and page <= pagination.current_page + 1) %}
                        <li class="page-item">
                            <a class="page-link" href="/users?page={{ page }}">{{ page }}</a>
                        </li>
                    {% elseif page == 4 or page == pagination.last_page - 3 %}
                        <li class="page-item disabled">
                            <span class="page-link">...</span>
                        </li>
                    {% endif %}
                {% endfor %}

                <!-- Next Page -->
                {% if pagination.current_page < pagination.last_page %}
                <li class="page-item">
                    <a class="page-link" href="/users?page={{ pagination.current_page + 1 }}">
                        Next <i class="bi bi-chevron-right"></i>
                    </a>
                </li>
                {% else %}
                <li class="page-item disabled">
                    <span class="page-link">Next <i class="bi bi-chevron-right"></i></span>
                </li>
                {% endif %}
            </ul>

            <!-- Page Info -->
            <div class="text-center text-muted mt-2">
                Showing {{ pagination.from }} to {{ pagination.to }} of {{ pagination.total }} results
            </div>
        </nav>
        {% endif %}

        {% else %}
        <!-- No Users Found -->
        <div class="text-center py-5">
            <i class="bi bi-people display-4 text-muted mb-3"></i>
            <h5 class="text-muted">No users found</h5>
            <p class="text-muted mb-3">
                {% if query.search %}
                    No users match your search criteria.
                {% else %}
                    There are no users in the system yet.
                {% endif %}
            </p>
            {% if user and user.isAdmin() %}
            <a href="/users/create" class="btn btn-primary">
                <i class="bi bi-plus-lg me-2"></i>Add First User
            </a>
            {% endif %}
        </div>
        {% endif %}
    </div>
</div>

<!-- Delete Modals -->
{% if user and user.isAdmin() %}
    {% for user_item in users %}
        {% if user_item.id != user.id %}
        <div class="modal fade" id="deleteModal{{ user_item.id }}" tabindex="-1">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title">Confirm Deletion</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                    </div>
                    <div class="modal-body">
                        <p>Are you sure you want to delete this user?</p>
                        <div class="alert alert-warning">
                            <strong>{{ user_item.display_name }}</strong>
                            <br>Username: {{ user_item.username }}
                        </div>
                        <p class="text-danger mb-0">
                            <i class="bi bi-exclamation-triangle me-1"></i>
                            This action cannot be undone. All associated data will remain but be unassigned.
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                        <form method="POST" action="/users/{{ user_item.id }}/delete" class="d-inline">
                            <input type="hidden" name="csrf_token" value="{{ csrf_token }}">
                            <button type="submit" class="btn btn-danger">
                                <i class="bi bi-trash me-1"></i>Delete User
                            </button>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        {% endif %}
    {% endfor %}
{% endif %}
{% endblock %}

{% block scripts %}
<script>
document.addEventListener('DOMContentLoaded', function() {
    // Auto-submit form on filter change
    document.getElementById('usertype').addEventListener('change', function() {
        this.form.submit();
    });

    // Search with Enter key
    document.getElementById('search').addEventListener('keypress', function(e) {
        if (e.key === 'Enter') {
            this.form.submit();
        }
    });
});
</script>
{% endblock %}